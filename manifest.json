{
    "manifest_version": 3,
    "name": "FindMyBook",
    "version": "0.0.1",
    "description": "Filter search, to find pdf version of books.",
    "permissions": ["activeTab", "scripting", "tabs"],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "action": {
        "default_title": "FindMyBook",
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon.png",
            "32": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "background": {
        "service_worker": "scripts/background.js"
    }
}
